RewriteEngine On
RewriteBase /dev/dns/

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f

# handles usual cases, index for viewing, dns for updates
RewriteRule ^ping/([^/]*)/([^/]*)$ dns.php?token=$1&hostname=$2 [QSA,L]
RewriteRule ^([^/]*)$ index.php?hostname=$1 [QSA,L]

# blocks .git access
RewriteRule ^(.*/)?\.git+ - [F,L]